        <!--  chỗ load background  -->
        <ScrollViewer
            x:Name="BackgoundScrollViewer"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            HorizontalScrollBarVisibility="Disabled"
            PanningMode="VerticalOnly"
            VerticalScrollBarVisibility="Hidden"
            Visibility="Hidden">
            <WrapPanel
                x:Name="BackgroundsWrapPanel"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </ScrollViewer>

        <!--  chỗ load Sticker  -->
        <ScrollViewer
            x:Name="StickerScrollViewer"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            HorizontalScrollBarVisibility="Disabled"
            PanningMode="VerticalOnly"
            VerticalScrollBarVisibility="Hidden"
            Visibility="Hidden">
            <WrapPanel
                x:Name="StickerWrapPanel"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </ScrollViewer>

        <!--<Canvas
            x:Name="StickerCanvas"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />-->

        <!--  show nut goi email  -->
        <Button
            x:Name="SendEmailButton"
            Grid.Row="0"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderThickness="0"
            Click="SendEmailButtonClick"
            FontSize="35"
            Visibility="Hidden">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="border"
                                    Padding="10"
                                    Background="White"
                                    CornerRadius="15">
                                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                        <Image
                                            Width="40"
                                            Height="40"
                                            Source="pack://application:,,,/backgrounds/gmail.png" />
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="24"
                                            FontWeight="Bold"
                                            Foreground="Black"
                                            Text="Send Email" />
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FFBEE6FD" />
                                        <Setter Property="Cursor" Value="Hand" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <Grid
            x:Name="PrintMenuGrid"
            Grid.Row="1"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Hidden">
            <StackPanel
                x:Name="PrintMenuStackPanel"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical"
                Visibility="Hidden">

                <!--  Nút in  -->
                <Button
                    x:Name="PrintButton"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderThickness="0"
                    Click="Print_Click"
                    FontSize="35"
                    Visibility="Hidden">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="border"
                                            Padding="10"
                                            Background="White"
                                            CornerRadius="15">
                                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                <Image
                                                    Width="40"
                                                    Height="40"
                                                    Source="pack://application:,,,/backgrounds/Print.png" />
                                                <TextBlock
                                                    Margin="10,0,0,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="24"
                                                    FontWeight="Bold"
                                                    Foreground="Black"
                                                    Text="Print" />
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FFBEE6FD" />
                                                <Setter Property="Cursor" Value="Hand" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!--  TextBox và Nút tăng giảm số lượng  -->
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        x:Name="AddOneCopyButton"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{x:Null}"
                        BorderThickness="0"
                        Click="AddOneCopyButtonClick"
                        Style="{StaticResource NoHighlightButtonStyle}"
                        Visibility="Hidden">
                        <Image
                            Width="30"
                            Height="30"
                            Source="pack://application:,,,/backgrounds/plus.png" />
                    </Button>

                    <TextBox
                        x:Name="NumberOfCopiesTextBox"
                        Width="60"
                        Height="60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="{x:Null}"
                        BorderThickness="0"
                        FontFamily="Arial"
                        FontSize="35"
                        Foreground="White"
                        Text="1"
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        Visibility="Hidden" />

                    <Button
                        x:Name="MinusOneCopyButton"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{x:Null}"
                        BorderThickness="0"
                        Click="MinusOneCopyButtonClick"
                        Style="{StaticResource NoHighlightButtonStyle}"
                        Visibility="Hidden">
                        <Image
                            Width="30"
                            Height="30"
                            Source="pack://application:,,,/backgrounds/minus.png" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <DockPanel
            x:Name="ThumbnailDockPanel"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Background="Transparent"
            Visibility="Visible" />

        <Grid
            x:Name="LoadingGrid"
            Grid.RowSpan="4"
            Grid.ColumnSpan="5"
            Background="#AA000000"
            Visibility="Hidden">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30"
                Foreground="White"
                Text="Processing, please wait..." />
        </Grid>

        <Grid
            x:Name="BookingPhotoThumbnailGrid"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Margin="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#AAFFFFFF"
            Visibility="Hidden">
            <Border
                Padding="10"
                Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="15">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="Black"
                        Text="Photo Library" />
                    <ScrollViewer
                        Grid.Row="1"
                        Margin="10"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Auto">
                        <UniformGrid
                            x:Name="BookingPhotoThumbnailWrapPanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Columns="3" />
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>
