                                StrokeDashCap="Round"
                                StrokeThickness="5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="LoadingRotateTransforms" CenterX="25" CenterY="25" />
                                </Ellipse.RenderTransform>
