<Window
    x:Class="FBoothApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FBoothApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Photomadness"
    Width="{x:Static SystemParameters.PrimaryScreenWidth}"
    Height="{x:Static SystemParameters.PrimaryScreenHeight}"
    Closing="Window_Closing"
    KeyDown="Window_KeyDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>

        <Storyboard x:Key="ImageTransitionStoryboard">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:1" />
        </Storyboard>

        <Style x:Key="NoHighlightButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="backgrounds/background_3.jpg" />
    </Window.Background>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <ContentControl
            x:Name="contentFrame"
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />

        <Button
            x:Name="StartButton"
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="StartButton_Click"
            Style="{StaticResource NoHighlightButtonStyle}"
            Visibility="Hidden">
            <Image Source="backgrounds/StartButton.png" />
        </Button>

        <!--<Button
            x:Name="StartButtonMenu"
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="StartButtonMenu_Click"
            Visibility="Hidden">
            <Image Source="backgrounds/StartButton.png" />
        </Button>-->

        <Image
            x:Name="LiveViewImage"
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Stretch="UniformToFill"
            Visibility="Visible" />

        <!--  kẻ lưới trong tấm ảnh chụp  -->
        <Canvas
            x:Name="GridCanvasLiveViewImage"
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            IsHitTestVisible="False">
            <!--  Grid lines will be added dynamically in code-behind  -->
        </Canvas>

        <Border
            x:Name="SliderBorder"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            BorderBrush="AliceBlue"
            BorderThickness="0">
            <Canvas
                x:Name="Slider"
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1"
                Grid.ColumnSpan="2">
                <Canvas.Background>
                    <ImageBrush ImageSource="backgrounds/logo.png" Stretch="Uniform" />
                </Canvas.Background>
            </Canvas>
        </Border>

        <!--<Button
            x:Name="StopButton"
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="StopButton_Click"
            Visibility="Hidden">
            <Image Source="backgrounds/StopButton.png" />
        </Button>-->

        <Button
            x:Name="ReadyButton"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="ReadyButton_Click"
            Style="{StaticResource NoHighlightButtonStyle}"
            Visibility="Hidden">
            <Image
                Width="100"
                Height="100"
                Source="backgrounds/ReadyButton.png" />
        </Button>

        <Button
            x:Name="NextButtonBackGround"
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="NextButtonBackGround_Click"
            Style="{StaticResource NoHighlightButtonStyle}"
            Visibility="Hidden">
            <Image
                Width="200"
                Height="200"
                Source="backgrounds/NextButton.png" />
        </Button>

        <Button
            x:Name="NextButtonSticker"
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="NextButtonSticker_Click"
            Style="{StaticResource NoHighlightButtonStyle}"
            Visibility="Hidden">
            <Image
                Width="200"
                Height="200"
                Source="backgrounds/NextButton.png" />
        </Button>

        <Button
            x:Name="NextButtonPrinting"
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="NextButtonPrinting_Click"
            Style="{StaticResource NoHighlightButtonStyle}"
            Visibility="Hidden">
            <Image
                Width="200"
                Height="200"
                Source="backgrounds/NextButton.png" />
        </Button>

        <ListBox x:Name="CameraListBox" Visibility="Hidden" />

        <TextBox
            x:Name="PhotoTextBox"
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            FontFamily="Arial"
            FontSize="30"
            FontWeight="Bold"
            Foreground="Black"
            Text="Welcome to FBooth! Please enter your code to continute and enjoy the experience!"
            TextWrapping="Wrap"
            Visibility="Visible" />

        <Image
            x:Name="ShowPictureInlayout"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Hidden" />

        <!--  Show tam anh de chuan bi in  -->
        <Grid
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="2">
            <Image
                x:Name="ShowPrint"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Hidden" />

            <Canvas
                Name="CanvasSticker"
                Width="{Binding ActualWidth, ElementName=ShowPrint}"
                Height="{Binding ActualHeight, ElementName=ShowPrint}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent" />
        </Grid>

        <ScrollViewer
            x:Name="LayoutScrollViewer"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            HorizontalScrollBarVisibility="Disabled"
            PanningMode="VerticalOnly"
            VerticalScrollBarVisibility="Hidden"
            Visibility="Hidden">
            <WrapPanel
                x:Name="LayoutsWrapPanel"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </ScrollViewer>


        <Grid
            x:Name="InputGrid"
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="10">
            <Border
                Padding="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="White"
                CornerRadius="15">
                <Grid>
                    <TextBox
                        x:Name="RoundedTextBox"
                        Width="1143"
                        Padding="10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="30"
                        FontStyle="Italic"
                        Foreground="Gray"
                        GotFocus="RoundedTextBox_GotFocus"
                        LostFocus="RoundedTextBox_LostFocus"
                        Text="Enter your code here!"
                        TextChanged="RoundedTextBox_TextChanged" />
                    <Button
                        x:Name="SendButton"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="SendButton_Click"
                        IsEnabled="False"
                        Style="{StaticResource NoHighlightButtonStyle}">
                        <Image
                            Width="35"
                            Height="35"
                            Source="backgrounds/send.png">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Opacity" Value="0.5" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEnabled, ElementName=SendButton}" Value="True">
                                            <Setter Property="Opacity" Value="1.0" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <!--  chỗ load background  -->
        <ScrollViewer
            x:Name="BackgoundScrollViewer"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            HorizontalScrollBarVisibility="Disabled"
            PanningMode="VerticalOnly"
            VerticalScrollBarVisibility="Hidden"
            Visibility="Hidden">
            <WrapPanel
                x:Name="BackgroundsWrapPanel"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </ScrollViewer>


        <!--  chỗ load Sticker  -->
        <ScrollViewer
            x:Name="StickerScrollViewer"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            HorizontalScrollBarVisibility="Disabled"
            PanningMode="VerticalOnly"
            VerticalScrollBarVisibility="Hidden"
            Visibility="Hidden">
            <WrapPanel
                x:Name="StickerWrapPanel"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </ScrollViewer>

        <!--<Canvas
            x:Name="StickerCanvas"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />-->

        <!--  show nut in  -->
        <Button
            x:Name="Print"
            Grid.Row="1"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="Print_Click"
            Style="{StaticResource NoHighlightButtonStyle}"
            Visibility="Hidden">
            <Image Source="backgrounds/PrintButton.png" />
        </Button>

        <!--  show nut goi email  -->
        <Button
            x:Name="SendEmailButton"
            Grid.Row="0"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="SendEmailButtonClick"
            Content="Send Email"
            FontSize="35"
            Foreground="White"
            Style="{StaticResource NoHighlightButtonStyle}"
            Visibility="Hidden" />

        <!--  show so luong anh muon in  -->
        <TextBox
            x:Name="NumberOfCopiesTextBox"
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{x:Null}"
            BorderThickness="0"
            FontFamily="Arial"
            FontSize="35"
            Foreground="White"
            Text="1"
            TextWrapping="Wrap"
            Visibility="Hidden" />

        <!--  show nut +- so luong anh in  -->
        <Button
            x:Name="AddOneCopyButton"
            Grid.Row="2"
            Grid.Column="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="AddOneCopyButtonClick"
            Style="{StaticResource NoHighlightButtonStyle}"
            Visibility="Hidden">
            <Image Source="backgrounds/PlusButton.png" />
        </Button>

        <Button
            x:Name="MinusOneCopyButton"
            Grid.Row="2"
            Grid.Column="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{x:Null}"
            BorderThickness="0"
            Click="MinusOneCopyButtonClick"
            Style="{StaticResource NoHighlightButtonStyle}"
            Visibility="Hidden">
            <Image Source="backgrounds/MinusButton.png" />
        </Button>

        <DockPanel
            x:Name="ThumbnailDockPanel"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Background="Transparent"
            Visibility="Visible" />

        <Grid
            x:Name="LoadingGrid"
            Grid.RowSpan="4"
            Grid.ColumnSpan="5"
            Background="#AA000000"
            Visibility="Hidden">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30"
                Foreground="White"
                Text="Processing, please wait..." />
        </Grid>

    </Grid>
</Window>



